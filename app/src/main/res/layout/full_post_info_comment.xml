<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_left_layout"
        android:padding="4dp">

        <ly.loud.loudly.ui.views.GlideImageView
            style="@style/Icon"
            android:id="@+id/comment_avatar"
            android:src="@mipmap/ic_instagram_round"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_body"
        android:layout_toRightOf="@id/comment_left_layout"
        android:layout_marginBottom="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_name"
            android:maxLines="1"
            android:text="Ivan Ivanov"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_text"
            android:layout_below="@id/comment_name"
            android:text="It’s a tremendous honor to grace the cover of ‪‎NBA2K16‬! Focused and read. It's almost that time again! KT TAPE"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="14sp"
            android:textColor="@color/black_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_footer"
            android:layout_below="@id/comment_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_likes_amount"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:text="100500"
                android:textSize="12sp"/>

            <ImageView
                style="@style/FeedbackIconNormal"
                android:id="@+id/comment_likes_button"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/comment_likes_amount"
                android:layout_toStartOf="@id/comment_likes_amount"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_favorite" />

            <TextView
                style="@style/FeedbackCounterNormal"
                android:id="@+id/comment_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/comment_likes_button"
                android:layout_toStartOf="@id/comment_likes_button"
                android:layout_centerVertical="true"
                android:text="11.12.2015 around 2 hours"
                android:textColor="@color/grey_color"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>