<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/people_list_person_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/people_list_person_body">

        <ImageView
            style="@style/Icon"
            android:id="@+id/people_list_person_avatar"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/people_list_person_name"
            android:text="Name"
            android:textSize="17sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:ellipsize="end"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/people_list_delimiter"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/people_list_person_body"
        android:background="@color/light_grey_color"/>


</RelativeLayout>